def test06():
    __cdbkernel__=create_scope()
    x::Coordinate;
    \phi::Depends(x);
    \delta{\phi}::Depends(x);
    \partial{#}::PartialDerivative;
    ex:= -1/2 \int{m**2 \phi**2}{x};
    vary(_, $\phi -> \delta{\phi}$)
    tst:= - \int{m**2 \delta{\phi}\phi}{x} - @(ex);
    assert(tst)
    print('Test 06 passed')
    
test06()

