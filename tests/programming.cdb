def test_expand(ex):
   tst:= (A??)^{\dagger};
   for node in ex:
      if tst.matches( node ):
         rep=$P$
         lst=[]
         for prod in node["\\prod"]:
            for factor in prod.factors():
               lst.append($ @(factor) $)
         for factor in list(reversed(lst)):
            rep.top().append_child($ @(factor)^{\dagger} $)
         rep.top().name=r"\prod"
         node.replace(rep)
   return ex

def test06():
