    \dagger::Symbol;
    ex:= (A B C)^{\dagger} + Q + (D E)^{\dagger};
    test_expand(ex)
    tst:= C^{\dagger} B^{\dagger} A^{\dagger} + Q + E^{\dagger} D^{\dagger} - @(ex);
    assert(tst==0)
    print("Test 06 passed")

test06()

