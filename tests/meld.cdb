# *_cycle_traces tests

def cyctrace01():
    from cdb.core.trace import combine_traces
    __cdbkernel__ = create_scope()
    Tr{#}::Trace.
    {A, B, C, D}::NonCommuting.
    ex := Tr{A B C D + C D A B + B C D A} - Tr{D A B C}.
    combine_traces(ex)
    meld(ex)
    assert ex == $2 * Tr{A B C D}$, ex
    print("Test cyctrace01 passed")

cyctrace01()

