# Non-commuting objects

# Basic behaviour
def test07():
    __cdbkernel__=create_scope()
    {A, B, C, D, E}::NonCommuting;
    ex := A B + A C + D A + E A:
    factor_out(_, $A$, right=True);
    factor_out(_, $A$, right=False);
    tst := A*(B + C) + (D + E)*A - @(ex);
    assert(tst==0)
    print('Test 07 passed')

test07()

