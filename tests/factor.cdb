# Ordering of pulled out factors
def test09():
    __cdbkernel__=create_scope()
    {A, B}::AntiCommuting.
    obj := A B c X + c B A Y:
    factor_out(_, $A, B, c$);
    tst := A B c * (X - Y) - @(obj);
    assert(tst==0)
    print('Test 09 passed')

test09()

def test10():
    __cdbkernel__=create_scope()
    {A, B}::AntiCommuting.
    {A, X, Y}::NonCommuting.
    {B, X, Y}::NonCommuting.
    obj := A B c X + c B A Y + X A B c + Y c B A:
    factor_out(_, $c, A, B$);
    factor_out(_, $c, A, B$, right=True);
    tst := (A B (X-Y) + (-X+Y) A B) c - @(obj);
    assert(tst==0)
    print('Test 10 passed')

test10()

